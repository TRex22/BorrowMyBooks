<!DOCTYPE html>
<html>
  <%- include('../partials/header') %>
  <body>   
   <%- include('../partials/navbar') %>

    <% if(!user.isMain) { user=userInfo } %>
  	<div class="center-align">
      <h1>Deposit Money in Your Account</h1>
    </div>

    <form role="form" action="/deposit" method="post" class="box new-book form-horizontal">
            <div class="row">
              <div class="col-lg-12">
                <h3 class="page-header"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Credit Card Information:</h3>
              </div>     
            </div>

            <div class="form-group">
                <label>Credit Card: </label> <br>
                <select class="selectpicker form-control" data-live-search="true" name="card" title="card" single>
                <option>VISA</option>
                <option>MASTERCARD</option>
              </select>
            </div>

            <div class="form-group">
              <p class="control-label col-sm-2" for="fullname">Card Number: </p>
              <div class="col-sm-10">
              <input type="text" class="form-control" tabindex="1" placeholder="Card Number" name="cardNumber">
              </div>
            </div>

            <div class="form-group">
              <p class="control-label col-sm-2" for="email">Expiration Date: </p>
              <div class="col-sm-10">
              <input type="date" class="form-control" tabindex="1" placeholder="2017/01/01" name="expirationDate">
              </div>
            </div>

            <div class="form-group">
              <p class="control-label col-sm-2" for="address">CVV: </p>
              <div class="col-sm-10">
              <input type="text" class="form-control" tabindex="1" name="cvv">
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <h3 class="page-header"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Deposit:</h3>
              </div>     
            </div>

            <div class="form-group">
              <p class="control-label col-sm-2" for="phone">Amount to Deposit R: </p>
              <div class="col-sm-10">
              <input type="number" class="form-control" tabindex="1" name="money" title="Phone Number" value="100" required>
              </div>
            </div>

            <br>

            <div>
              <input type="submit" class="btn btn-default" value="Save" tabindex="1">
            </div>

    </form>
    
          </div>
      </div>
  <%- include('../partials/footer') %>
  </body>
</html>
