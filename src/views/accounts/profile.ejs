<!DOCTYPE html>
<html>
  <%- include('../partials/header') %>
  <body>   
   <%- include('../partials/navbar') %>

  	<div class="site-margin">
      <h1><%= user.username %></h1>
    </div>

  <!-- <div class="center-align"> -->
    <div class="user site-margin">


        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-3">
                <img class="img-responsive account-picture" src=<% if (user.picURL) {%> <%= user.picURL %> <%} else{%> <%= site.defaults.DefaultProfilePictureURL %> <%} %> >
            </div>

            <div class="col-md-5">
                <h3><%= user.name %></h3>
                <ul>
                    <li>Username: <strong><%= user.username %></strong></li>
                    <li>Name: <strong><%= user.name %></strong></li>
                    <li>Email: <strong><%= user.email %></strong></li>
                    <li>userId: <strong><%= user.userId %></strong></li>
                    <li>Interests: <strong><% if (user.interests) {%> 
                                    <%= user.interests[0]  %> 
                                      <% for(var i=1; i<user.interests.length; i++) {%>
                                         , <%= user.interests[0]  %>
                                     <% } %> 
                                   <%} %> </strong></li>
                    <li>Address: <strong><%= user.address %></strong></li>
                    <li>Phone: <strong><%= user.phone %></strong></li>
                    <li title="<%= user.lastLoginDate %>">Last Login Date: <strong><%= site.moment(user.lastLoginDate).format('LLL'); %></strong></li>
                    <li title="<%= user.registrationDate %>">Registration Date: <strong><%= site.moment(user.registrationDate).format('LLL'); %></strong></li>
                </ul>
                <div class="row">
                  <div class=col-md-6>
                    <h3>Books Borrowed:</h3>
                  </div>

                  <div class=col-md-6>
                    <h3>Books Traded Away:</h3>
                  </div>
              </div>
              <br>
            </div>
    </div>
    

  <!-- </div> -->
  <%- include('../partials/footer') %>
  </body>
</html>
