<!DOCTYPE html>
<html>
  <%- include('../partials/header') %>
  <body>   
   <%- include('../partials/navbar') %>

  	<div class="site-margin">
      <h1>Your Profile Settings</h1>
    </div>

    <div class="user site-margin">
        <div>
            <h2>Your Public Profile:</h2>
            <div class="form-group">
                <img class="img-responsive account-picture" width="50" src=<% if (user.picURL) {%> <%= user.picURL %> <%} else{%> <%= site.defaults.DefaultProfilePictureURL %> <%} %> >
                <button>Upload new picture</button>
              </div>
              
              <form role="form" action="/profile/settings" method="post" class="box login">        

                <div class="form-group">
                  <input type="text" class="form-control" tabindex="1" placeholder="Username" name="username" title="Username" value="<%= user.username %>" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" tabindex="1" placeholder="Full Name" name="fullname" title="Full Name" value="<%= user.name %>" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" tabindex="1" placeholder="Email Address" name="email" title="Email" value="<%= user.email %>" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" tabindex="1" placeholder="Physical Address" name="address" title="Physical Address" value="<%= user.address %>" required>
                </div>

                <div class="form-group">
                  <input type="text" class="form-control" tabindex="1" placeholder="Phone Number" name="phone" title="Phone Number" value="<%= user.phone %>" required>
                </div>

                <div class="form-group">
                <label>Select your interests:</label> <br>
                    <select class="selectpicker form-control" data-live-search="true" name="interests" title="Interests" value="<%= user.interests %>" multiple>
                    <option>Mathematics</option>
                    <option>Computer Science</option>
                    <option>Biology</option>
                    <option>Finance</option>
                    <option>Chemistry</option>
                    <option>Law</option>
                    <option>Engineering</option>
                    <option>Physics</option>
                  </select>
                </div>

                <br>

                <div>
                  <input type="submit" class="btn btn-default" value="Save" tabindex="1">
                </div>

              </form>
    
          </div>
      </div>
  <%- include('../partials/footer') %>
  </body>
</html>
