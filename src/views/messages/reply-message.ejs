<!DOCTYPE html>
<html>

<%- include('../partials/header') %>

<body>
    <%- include('../partials/navbar') %>
            <h1 class="center-align">Create Reply Message</h1>
            <div>
              <h2>Original Message: </h2>
              <p><%= originalMessage %></p>
            </div>
            <form role="form" action="/message/<%= messageId %>/reply" method="post" class="box form-horizontal new-book">

                <div class="row">
                  <div class="col-lg-12">
                    <h3 class="page-header"><span class="glyphicon glyphicon-envelope" style="color: grey;" aria-hidden="true"></span> User Message:</h3>
                  </div>     
                </div>

                <div class="form-group">
                  <label for="summary">Message:</label>
                  <textarea class="form-control" tabindex="1" rows="5" name="message" required></textarea>
                </div>


                <div class="form-group">
                  <label class="control-label col-sm-2" for="defaultProfilePictureURL">Priority: </label>
                  <div class="col-sm-10">
                    <input type="number" class="form-control" tabindex="1" data-toggle="tooltip" title="Priority" placeholder="Priority" name="priority" value="1" min="1" max="10">
                  </div>
                </div>

                <div>
                    <input type="submit" class="btn btn-default" value="Save" tabindex="1">
                </div>
            </form>
        <%- include('../partials/footer') %>
</body>
</html>
