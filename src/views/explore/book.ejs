<!DOCTYPE html>
<html>
  <%- include('../partials/header') %>
  <body>   
   <%- include('../partials/navbar') %>

  	<div class="bs-component">
      <h1><%= book.title %></h1>
    </div>

  <!-- <div class="center-align"> -->
    <div class="book">


        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-3">
                <img class="img-responsive" src=<% if (book.picURL) {%> <%= book.picURL %> <%} else{%> <%= site.defaults.DefaultBookPictureURL %> <%} %> >
            </div>

            <div class="col-md-5">
                <h3>Book Details</h3>
                <ul>
                    <li>Title: <%= book.title %></li>
                    <li>Author: <%= book.author %></li>
                    <li>Edition: <%= book.edition %></li>
                    <li>ISBN: <%= book.ISBN %></li>
                    <li>Interests: <% if (book.interests) {%> 
                                    <%= book.interests[0]  %> 
                                      <% for(var i=1; i<book.interests.length; i++) {%>
                                         , <%= book.interests[0]  %>
                                     <% } %> 
                                   <%} %> </li>
                    <li>Language: <%= book.language %></li>
                    <li>Published: <%= book.publishDate %></li>
                    
                </ul>

                <br>

                <h3>Book Summary</h3>
                <p> --Insert Summary--.</p>
            </div>

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  Basic panel example
                </div>
              </div>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Related Projects</h3>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

        </div>
        <!-- /.row -->

    </div>
    

  <!-- </div> -->
  <%- include('../partials/footer') %>
  </body>
</html>
