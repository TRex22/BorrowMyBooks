<!DOCTYPE html>
<html>

<%- include('../partials/header') %>

<body>
    <%- include('../partials/navbar') %>
        <div class="bs-component">
            <h1 class="center-align">Change System Defaults</h1>
            <form role="form" action="/admin/system-defaults" method="post" class="box login">
                <div class="form-group">
                    <input type="text" class="form-control" tabindex="1" data-toggle="tooltip" title="Site Title" placeholder="Site Title" name="title" value="<%= site.defaults.Title %>"><br/>

                    <input type="text" class="form-control" tabindex="1" data-toggle="tooltip" title="Default Profile Picture URL" placeholder="Default Profile Picture URL" name="defaultProfilePictureURL" value="<%= site.defaults.DefaultProfilePictureURL %>"><br/>

                    <input type="text" class="form-control" tabindex="1" data-toggle="tooltip" title="Default Book Cover URL" placeholder="Default Book Cover URL" name="defaultBookPictureURL" value="<%= site.defaults.DefaultBookPictureURL%>"><br/>

                    <input type="text" class="form-control" tabindex="1" data-toggle="tooltip" title="Default Branding Text" placeholder="Default Branding Text" name="defaultBrandingText" value="<%= site.defaults.DefaultBrandingText %>"><br/>

                     <select name="defaultTheme" class="selectpicker form-control" data-live-search="true" data-toggle="tooltip" title="Default System Theme">
                        <% for(var i=0; i<site.themes.length; i++) {%>
                            <option value=<%= site.themes[i] %> <% if(site.themes[i] === site.defaults.DefaultTheme) { %>selected<% } %>>
                            <%= site.themes[i] %>
                            </option>
                        <% } %>
                    </select><br/>
                </div>
                
                <div>
                    <input type="submit" class="btn btn-default" value="Save" tabindex="1">
                </div>
            </form>
        </div>
        <%- include('../partials/footer') %>
</body>
</html>
